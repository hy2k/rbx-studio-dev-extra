{
	"name": "run-in-roblox-studio",
	"version": "0.0.2",
	"type": "module",
	"bin": {
		"run-in-roblox-studio": "bin/run-in-roblox-studio.mjs"
	},
	"files": [
		"bin",
		"dist",
		"!**/*.test.*"
	],
	"scripts": {
		"start": "cross-env NODE_ENV=development node bin/run-in-roblox-studio.mjs --place run-in-roblox-studio.rbxl --script script.server.lua",
		"build": "concurrently -c auto \"npm:build:*\"",
		"build:ts": "tsc",
		"build:plugin": "npm run -prefix plugin build",
		"watch": "concurrently -c auto \"npm:watch:*\"",
		"watch:ts": "tsc -w --preserveWatchOutput",
		"watch:plugin": "npm run -prefix plugin watch",
		"watch:place": "rojo build -o run-in-roblox-studio.rbxl --watch",
		"clean": "rimraf dist",
		"test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
		"test:watch": "npm run test -- --watch",
		"lint": "eslint src",
		"prepack": "npm run clean && tsc",
		"prepublishOnly": "npm run test && npm run lint",
		"prepare": "npm i -prefix plugin"
	},
	"license": "MIT",
	"dependencies": {
		"cleye": "^1.3.2",
		"fastify": "^4.25.0",
		"open-rbxl": "^0.0.4"
	}
}
