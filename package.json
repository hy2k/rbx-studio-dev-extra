{
	"name": "run-in-roblox-studio-root",
	"private": true,
	"type": "module",
	"version": "0.0.1",
	"license": "MIT",
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@rbxts/compiler-types": "^2.2.0-types.0",
		"@rbxts/types": "^1.0.737",
		"@types/node": "^20.10.4",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"eslint": "^8.55.0",
		"eslint-config-y2": "^0.0.4",
		"eslint-plugin-vitest": "^0.3.18",
		"execa": "^8.0.1",
		"memfs": "^4.6.0",
		"pino-pretty": "^10.3.0",
		"prettier": "^3.1.1",
		"rimraf": "^5.0.5",
		"roblox-ts": "^2.2.0",
		"typescript": "^5.3.3",
		"vitest": "^1.1.0"
	},
	"prettier": {
		"printWidth": 120,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true
	},
	"scripts": {
		"build": "npm run build --workspaces --if-present",
		"watch": "node scripts/concurrently.mjs watch",
		"test": "npm run test --workspaces --if-present",
		"lint": "eslint --cache \"**/*.{ts,js,mjs}\"",
		"fix": "npm run lint -- --fix",
		"format": "prettier --write \"**/*.{ts,json}\""
	}
}
