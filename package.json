{
	"name": "run-in-roblox-studio-root",
	"private": true,
	"type": "module",
	"version": "0.0.1",
	"license": "MIT",
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@eslint/js": "^8.55.0",
		"@typescript-eslint/eslint-plugin": "^6.13.2",
		"@typescript-eslint/parser": "^6.13.2",
		"concurrently": "^8.2.2",
		"eslint": "^8.55.0",
		"eslint-plugin-import": "^2.29.0",
		"eslint-plugin-perfectionist": "^2.5.0",
		"eslint-plugin-roblox-ts": "^0.0.36",
		"prettier": "^3.1.0"
	},
	"prettier": {
		"printWidth": 120,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true,
		"tabWidth": 4
	},
	"scripts": {
		"dev": "concurrently -c auto \"npm:dev:*\"",
		"dev:plugin": "npm run --workspace plugin dev",
		"dev:cli": "npm run --workspace run-in-roblox-studio dev",
		"fix": "eslint --fix \"**/*.{ts,json}\"",
		"format": "prettier --write \"**/*.{ts,json}\""
	}
}
